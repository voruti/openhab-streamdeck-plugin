{
    "scripts": {
        "clean": "rm -r dist/ voruti.openhab.sdPlugin/bin/ || true",
        "build": "rollup -c && streamdeck bundle --force --output dist voruti.openhab.sdPlugin && npm run format",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart voruti.openhab\"",
        "format": "prettier . --write",
        "lint": "npm run clean && eslint --max-warnings 0"
    },
    "prettier": "@elgato/prettier-config",
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "1.6.0",
        "@elgato/eslint-config": "0.3.1",
        "@elgato/prettier-config": "0.3.1",
        "@rollup/plugin-commonjs": "28.0.9",
        "@rollup/plugin-node-resolve": "15.3.1",
        "@rollup/plugin-terser": "0.4.4",
        "@rollup/plugin-typescript": "12.3.0",
        "@tsconfig/node20": "20.1.8",
        "@types/node": "24.10.8",
        "rollup": "4.53.5",
        "tslib": "2.8.1",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "@elgato/streamdeck": "2.0.0"
    }
}
